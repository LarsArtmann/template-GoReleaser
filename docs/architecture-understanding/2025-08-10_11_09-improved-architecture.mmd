        end

        subgraph "Observability - OTEL"
            TRACE[Tracing]
            METRIC[Metrics]
            LOG[Structured Logs]
        end

        subgraph "External"
            GR_CFG[GoReleaser Configs]
            ENV[Environment]
            GIT[Git Repository]
        end
    end

